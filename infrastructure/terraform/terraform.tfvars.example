# Example terraform.tfvars file
# Copy this to terraform.tfvars and fill in your values
# NEVER commit terraform.tfvars to git (contains secrets!)

# AWS Configuration
aws_region = "us-west-2"
environment = "production"

# EC2 Configuration  
instance_type = "t3.medium"  # $30-40/month
key_name = "your-ssh-key-name"  # Name of your AWS key pair
allowed_ssh_cidr = "YOUR_IP_ADDRESS/32"  # Replace with your IP!

# Application Secrets (REQUIRED)
google_api_key = "your-google-api-key-here"
jwt_secret_key = "your-super-secret-jwt-key-minimum-32-characters-long"

# Pinecone (Optional)
pinecone_api_key = "your-pinecone-api-key"
pinecone_index_name = "academe-prod"

# MongoDB Atlas (Optional - leave empty to use local MongoDB in Docker)
mongodb_atlas_public_key = ""
mongodb_atlas_private_key = ""
mongodb_atlas_org_id = ""
mongodb_atlas_project_name = "Academe"

# Docker Hub (for pulling images)
docker_username = "claire428"
docker_password = "your-docker-hub-token"
